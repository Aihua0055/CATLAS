<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/head %>
  <link rel='stylesheet' href='/stylesheets/form.css' />
</head>

<body>

  <header>
    <% include partials/header %>
  </header>

  <main>
    <div id="main_container">
      <div class="container pb-5" id="form_container">
        <div class="text-center pt-5 text-info">
          <h1>Add a New Cat</h1>
          <p class="lead">Enter the info for the cat you found and we'll add it to the Cat Map</p>
        </div>
        <div class="container ml-2 d-flex justify-content-center align-items-center">
          <form class="col-xs-8 px-0 needs-validation novalidate text-info" method="POST" action='/add'>
            <div class="form-group row">
              <label class="px-0 col-sm-4 col-form-label">Color:</label>
              <div class="px-0 ml-2 col-sm-7">
                <select class="form-control" name="color">
                  <option>black</option>
                  <option>blue</option>
                  <option>chocolate</option>
                  <option>cinnammon</option>
                  <option>cream</option>
                  <option>fawn</option>
                  <option>hairless</option>
                  <option>lilac</option>
                  <option>red</option>
                  <option>smoke</option>
                  <option>white</option>
                </select>
              </div>
            </div>

            <div class="form-group row">
              <label class="px-0 col-sm-4 col-form-label">Date Found:</label>
              <div class="px-0 ml-2 col-sm-7">
                <input type="date" class="form-control" id="dateFound" name="dateFound">
              </div>
            </div>

            <div class="form-group row">
              <label class="px-0 col-sm-4 col-form-label">Latitude:</label>
              <div class="px-0 ml-2 col-sm-7">
                <input type="text" class="form-control" id="lat" name="lat" placeholder="latitude">
              </div>
            </div>

            <div class="form-group row">
              <label class="px-0 col-sm-4 col-form-label">Longitude:</label>
              <div class="px-0 ml-2 col-sm-7">
                <input type="text" class="form-control" id="long" name="long" placeholder="longitude">
              </div>
            </div>

            <div class="form-group row">
              <label class="px-0 col-sm-4 col-form-label">Breed:</label>
              <div class="px-0 ml-2 col-sm-7">
                <input type="text" class="form-control" id="breed" name="breed" placeholder="breed">
              </div>
            </div>

            <div class="form-group row">
              <!-- <label class="px-0 col-sm-4 col-form-label">Size:</label> -->
              <div class="px-0 col-sm-12 ml-2 mt-1">
                <div class="form-check form-check-inline">
                  <input class="form-check-input" id="small_opt" type="radio" name="size" value="small">
                  <label class="form-check-label" for="small_opt">small</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="size" value="medium">
                  <label class="form-check-label">medium</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="size" value="large">
                  <label class="form-check-label">large</label>
                </div>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-10">
                <button type="submit" class="btn btn-info ml-5 btn-lg">Add My Cat</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <!-- Breed autocomplete -->
  <script src="/javascripts/form.js"></script>

  <footer>
    <% include partials/footer %>
  </footer>

</body>

</html>